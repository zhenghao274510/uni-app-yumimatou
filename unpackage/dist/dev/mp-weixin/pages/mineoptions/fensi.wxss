.navbar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 80rpx;
  background: #fff;
  box-shadow: 0 1px 5px rgba(0, 0, 0, 0.06);
  position: fixed;
  z-index: 999;
  width: 100%;
}
.navbar .nav-item {
  width: 50%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 100%;
  font-size: 30rpx;
  color: #333333;
  position: relative;
}
.navbar .nav-item.current:after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
