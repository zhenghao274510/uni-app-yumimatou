
.yijian-tit{
	font-size: 30rpx;
	color: #333333;
	font-weight: bold;
	position: relative;
	padding: 20rpx 0 20rpx 20rpx;
}
.yijian-tit::before{
	content: '';
	position: absolute;
	top: 50%;
	left: 0;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	width:5rpx;
	height:31rpx;
	background:rgba(107,212,83,1);
	border-radius:3px;
}
