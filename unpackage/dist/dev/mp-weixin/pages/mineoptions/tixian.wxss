
page {
	height: 100%;
	background-color: #F6F6F6;
}
.tixian-content {
	width: 95%;
	padding: 30rpx;
	background: #FFFFFF;
	margin: 50rpx auto;
	box-sizing: border-box;
}
.tixian-tit{
	font-size:30rpx;
	font-weight:500;
	color:rgba(51,51,51,1);
}
.tixian-input-left{
	font-size:60rpx;
	font-weight:800;
	color:rgba(51,51,51,1);
}
.tixian-input-left-right{
	line-height: 108rpx;
	height: 108rpx;
	padding-left: 30rpx;
	font-size: 32rpx;
}
.tixian-input{
	border-bottom:2rpx solid rgba(242,242,242,1);
	padding: 30rpx 0;
}
.tixian-price{
	font-size:26rpx;
	font-weight:500;
	color:rgba(153,153,153,1)
}
.tixian-all{
	font-size:26rpx;
	font-weight:500;
	color:rgba(87,104,141,1);
	margin-left: 30rpx;
}
.tixian-money{
	padding: 30rpx 0;
}
.tixian-btn{
	width:629rpx;
	height:88rpx;
	margin: 0 auto;
	background:#999999;
	font-size:36rpx;
	font-weight:bold;
	color:rgba(255,255,255,1);
	text-align: center;
	line-height: 88rpx;
}

