
._div,
scroll-view,
swiper {
	box-sizing: border-box;
}
.wuc-tab {
	white-space: nowrap;
	z-index: 9999;
}
.wuc-tab-item-img {
	position: absolute;
	top: 0;
	left: 0;
	width: 160rpx;
	height: 115rpx;
	z-index: -1;
}
.wuc-tab-item {
	display: inline-block;
	padding: 0 30rpx;
	color: #9C9C9C;
	position: relative;
	text-align: center;
	width: 160rpx;
	height: 100rpx;
	box-sizing: border-box;
}
.position {
	position: absolute;
	bottom: -22rpx;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
	width: 0;
	height: 0;
	border-left: 0;
	border-width: 8rpx;
	border-style: solid;
	border-color: #09BB07 transparent transparent;
}
.wuc-tab-item.cur {
	background-color: #09BB07;
}
.wuc-tab.fixed {
	position: fixed;
	width: 100%;
	height: 100rpx;
	top: 0;
	z-index: 1024;
}
.flex {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.text-center {
	text-align: center;
}
.flex-sub {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.text-blue {
	color: #FFFFFF;
}
.text-white {
	color: #ffffff;
}
.bg-white {
	background-color: #ffffff;
}
.bg-blue {
	background-color: #0081ff;
}
.text-orange {
	color: #f37b1d
}
.text-xl {
	font-size: 36rpx;
}

